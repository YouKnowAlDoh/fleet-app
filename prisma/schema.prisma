generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")   // direct for migrations
}

model Asset {
  id           String   @id @default(uuid())
  code         String
  name         String
  assetType    String
  vin          String?
  plate        String?
  year         Int?
  make         String?
  model        String?
  status       String   @default("ACTIVE")
  meterUnit    String   @default("MILES")
  currentMeter Int?
  createdAt    DateTime @default(now())
}
